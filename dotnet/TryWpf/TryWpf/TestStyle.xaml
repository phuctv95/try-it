<Window x:Class="TryWpf.TestStyle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TryWpf"
        mc:Ignorable="d"
        Title="TestStyle" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="myButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Foreground" Value="Orange"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Button x:Name="button" Content="Button" Style="{StaticResource myButton}" HorizontalAlignment="Left" Margin="154,104,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_Copy" Content="Button" Style="{StaticResource myButton}" HorizontalAlignment="Left" Margin="437,125,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_Copy1" Content="Button" Style="{StaticResource myButton}" HorizontalAlignment="Left" Margin="259,262,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
